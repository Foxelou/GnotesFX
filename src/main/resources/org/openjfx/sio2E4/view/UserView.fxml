    <!-- Tableau des utilisateurs -->
    <VBox spacing="0"
          style="-fx-background-radius: 8; -fx-border-color: #e5e7eb; -fx-border-radius: 8; -fx-border-width: 1;"
          VBox.vgrow="ALWAYS">

        <TableView fx:id="usersTable"
                   style="-fx-background-radius: 8; -fx-border-color: #e5e7eb; -fx-border-radius: 8; -fx-border-width: 1;"
                   VBox.vgrow="ALWAYS" > <!--style="-fx-background-color: transparent; -fx-table-cell-border-color: transparent;"-->
            <columns>
                <TableColumn fx:id="nomColumn" prefWidth="150" style="-fx-font-weight: bold;" text="Nom" />
                <TableColumn fx:id="prenomColumn" prefWidth="150" style="-fx-font-weight: bold;" text="Prenom" />
                <TableColumn fx:id="emailColumn" prefWidth="200" text="Email" />
                <TableColumn fx:id="roleColumn" prefWidth="120" text="Rôle" />
                <TableColumn fx:id="telephoneColumn" prefWidth="150" text="Téléphone" />
                <TableColumn fx:id="adresseColumn" prefWidth="100" text="Adresse" />
                <TableColumn fx:id="actionsColumn" prefWidth="120" sortable="false" text="Actions" />
            </columns>

            <placeholder>
                <VBox alignment="CENTER" spacing="10" style="-fx-padding: 50;">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #6c757d;" text="Aucun résultat" />
